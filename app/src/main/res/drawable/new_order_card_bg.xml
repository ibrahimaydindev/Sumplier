<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Basılı iken gösterilecek arka plan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E07A00"/> <!-- Daha koyu bir turuncu -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Normal durumda gösterilecek arka plan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FB9400"/> <!-- Varsayılan turuncu -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>